<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maintenance">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/mtext"
    android:text="For Booking of an Appointment kindly fill out This form"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"
    android:textColor="@color/greygreen"
    android:layout_marginTop="250dp"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/f_value_et"
        android:inputType="text"
        android:layout_marginTop="40dp"
        android:hint="Enter the name"
        android:layout_below="@+id/mtext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_value_et"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/f_value_et"
        android:layout_margin="10dp"
        android:hint="Enter the phone"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addbtn"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:text=" Add "
        android:layout_below="@id/first_value_et"/>
</RelativeLayout>